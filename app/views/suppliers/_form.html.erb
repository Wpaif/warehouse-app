<% if @supplier.errors.any? %>
  <div>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @supplier.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @supplier, local: true do |form| %>
  <div>
    <%= form.label :brand_name %>
    <%= form.text_field :brand_name %>
  </div>

  <div>
    <%= form.label :corporate_name %>
    <%= form.text_field :corporate_name %>
  </div>

  <div>
    <%= form.label :registered_number %>
    <%= form.number_field :registered_number %>
  </div>

  <div>
    <%= form.label :full_address %>
    <%= form.text_field :full_address %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  
  <div>
    <%= form.label :phone_number %>
    <%= form.phone_field :phone_number %>
  </div>

  <%= form.submit 'Cadastrar Fornecedor' %>

<% end %>
